<resources>

    <!-- Base application theme. -->
    <style name="VioletaTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primarioVioleta</item>
        <item name="colorPrimaryDark">@color/primarioVioletaDark</item>
        <item name="colorAccent">@color/violetaAccent</item>
        <item name="android:navigationBarColor">@color/primarioVioletaLight</item>
    </style>

    <style name="RojoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primarioRojo</item>
        <item name="colorPrimaryDark">@color/primarioRojoDark</item>
        <item name="colorAccent">@color/rojoAccent</item>
        <item name="android:navigationBarColor">@color/primarioRojoLight</item>
    </style>

    <style name="VerdeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primarioVerde</item>
        <item name="colorPrimaryDark">@color/primarioVerdeDark</item>
        <item name="colorAccent">@color/verdeAccent</item>
        <item name="android:navigationBarColor">@color/primarioVerdeLight</item>
    </style>

    <style name="AzulTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primarioAzul</item>
        <item name="colorPrimaryDark">@color/primarioAzulDark</item>
        <item name="colorAccent">@color/azulAccent</item>
        <item name="android:navigationBarColor">@color/primarioAzulLight</item>
    </style>


    <style name="ButtonApp">
        <item name="android:textColor">@color/black</item>
        <item name="android:opacity">translucent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">10dp</item>
        <item name="android:translationZ">10dp</item>
    </style>

</resources>
